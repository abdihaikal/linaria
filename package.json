{
  "private": true,
  "name": "linaria",
  "version": "2.0.0",
  "description": "Blazing fast zero-runtime CSS in JS library",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "bin": "bin/linaria.js",
  "files": [
    "packages/cli/bin/",
    "lib/",
    "esm/",
    "react/",
    "*.d.ts",
    "babel.js",
    "evaluators.js",
    "loader.js",
    "rollup.js",
    "server.js",
    "stylelint-config.js"
  ],
  "license": "MIT",
  "repository": "git@github.com:callstack/linaria.git",
  "bugs": {
    "url": "https://github.com/callstack/linaria/issues"
  },
  "homepage": "https://github.com/callstack/linaria#readme",
  "keywords": [
    "react",
    "css",
    "css-in-js",
    "styled-components",
    "babel-plugin",
    "babel",
    "webpack"
  ],
  "scripts": {
    "prepare": "yarn lerna run prepare",
    "test": "yarn lerna run test",
    "test:coverage": "yarn lerna run test -- -- --coverage",
    "test:dts": "yarn lerna run test:dts",
    "typecheck": "yarn lerna run typecheck",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "check:all": "yarn test:dts && yarn typecheck && yarn test && yarn lint",
    "add-contributor": "all-contributors add",
    "watch": "yarn build --watch",
    "release": "release-it",
    "website": "yarn --cwd website",
    "bootstrap": "yarn && yarn website install"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/cli": ">=7",
    "@babel/plugin-proposal-class-properties": ">=7",
    "@babel/plugin-syntax-jsx": ">=7",
    "@babel/preset-env": ">=7",
    "@babel/preset-react": ">=7",
    "@babel/preset-typescript": ">=7",
    "@callstack/eslint-config": "^10.0.1",
    "@commitlint/config-conventional": "^8.3.4",
    "@release-it/conventional-changelog": "^1.1.0",
    "@types/cosmiconfig": "^5.0.3",
    "@types/debug": "^4.1.5",
    "@types/dedent": "^0.7.0",
    "@types/enhanced-resolve": "^3.0.6",
    "@types/estree": "0.0.45",
    "@types/jest": "^24.9.1",
    "@types/loader-utils": "^1.1.3",
    "@types/mkdirp": "^0.5.2",
    "@types/normalize-path": "^3.0.0",
    "@types/react": ">=16",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "all-contributors-cli": "^6.1.1",
    "babel-jest": "^24.5.0",
    "codecov": "^3.2.0",
    "commitlint": "^8.3.5",
    "del-cli": "^1.1.0",
    "dtslint": "^4.0.4",
    "eslint": "^7.6.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^1.3.1",
    "jest": "^24.9.0",
    "lerna": "^3.22.1",
    "prettier": "^2.0.5",
    "react": ">=16",
    "release-it": "^12.4.3",
    "typescript": "^3.9.7"
  },
  "resolutions": {
    "git-raw-commits": "^2.0.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn check:all"
    }
  },
  "workspaces": [
    "./packages/*"
  ]
}
